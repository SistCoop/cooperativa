<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="cooperativaPU">
		<jta-data-source>java:jboss/datasources/cooperativaDS</jta-data-source>
		<properties>
			<!-- Properties for Hibernate -->
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.id.new_generator_mappings" value="true" />
		</properties>

		<!-- Named JPQL queries per entity -->
		<mapping-file>META-INF/hql/Boveda.xml</mapping-file>
		<mapping-file>META-INF/hql/Caja.xml</mapping-file>
		<mapping-file>META-INF/hql/HistorialBoveda.xml</mapping-file>
		<mapping-file>META-INF/hql/HistorialBovedaCaja.xml</mapping-file>
		<mapping-file>META-INF/hql/TrabajadorCaja.xml</mapping-file>
		<mapping-file>META-INF/hql/TransaccionBovedaCaja.xml</mapping-file>
		<mapping-file>META-INF/hql/TransaccionesCajaCaja.xml</mapping-file>

	</persistence-unit>
</persistence>